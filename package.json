{
  "name": "apestaartje",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "changeset-create": "changeset",
    "changeset-apply": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joppe/apestaartje.git"
  },
  "keywords": [],
  "author": {
    "name": "Joppe Aarts",
    "email": "joppe@apestaartje.info"
  },
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/config/*",
    "packages/lib/*"
  ],
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "devDependencies": {
    "@apestaartje/eslint-config": "*",
    "@changesets/cli": "^2.23.0",
    "eslint": "^8.18.0",
    "import-sort-style-module": "^6.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-import-sort": "^0.0.7",
    "turbo": "^1.2.16"
  }
}
