{
  "name": "@apestaartje/dom",
  "version": "1.3.1",
  "description": "A library with DOM utility functions",
  "scripts": {
    "build": "tsc --project tsconfig.build.json --outDir dist",
    "dev": "tsc --watch --project ./tsconfig.build.json",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm -rf coverage",
    "lint": "eslint ./src --fix",
    "prepublishOnly": "npm run build",
    "test": "karma start karma.conf.js",
    "test:watch": "karma start karma.conf.js --no-single-run --auto-watch"
  },
  "author": {
    "name": "Joppe Aarts",
    "email": "joppe@apestaartje.info"
  },
  "license": "MIT",
  "keywords": [
    "TypeScript"
  ],
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "dependencies": {
    "@apestaartje/geometry": "^1.3.0"
  },
  "devDependencies": {
    "@apestaartje/eslint-config": "*",
    "@apestaartje/types": "^1.0.1",
    "@apestaartje/ts-config": "*",
    "@types/jasmine": "^4.0.3",
    "eslint": "^8.18.0",
    "jasmine": "^4.2.1",
    "jasmine-core": "^4.2.0",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-jasmine": "^5.1.0",
    "karma-typescript": "^5.5.3",
    "karma-typescript-es6-transform": "^5.5.3",
    "typescript": "^4.7.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
